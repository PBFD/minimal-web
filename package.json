{
  "name": "html",
  "version": "1.0.0",
  "description": "Boilerplate for minimal static site",
  "type": "module",
  "scripts": {
    "watch:sass": "sass scss/app.scss css/style.css --watch --no-source-map --style compressed",
    "devstart": "live-server --browser=chrome",
    "start": "npm-run-all --parallel watch:sass devstart",
    "make:page": "plop --plopfile ./generator/index.js",
    "html:validate": "html-validate *.html",
    "format": "prettier --write ."
  },
  "keywords": [
    "static",
    "html",
    "css",
    "Boilerplate"
  ],
  "author": "PBFD",
  "license": "ISC",
  "devDependencies": {
    "html-validate": "^8.27.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "plop": "^4.0.1",
    "prettier": "^3.4.2",
    "sass": "^1.82.0"
  }
}
